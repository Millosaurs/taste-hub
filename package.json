{
  "name": "idt-shit",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "next": "^16.1.1",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@orpc/server": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @idt-shit/db db:push",
    "db:studio": "turbo -F @idt-shit/db db:studio",
    "db:generate": "turbo -F @idt-shit/db db:generate",
    "db:migrate": "turbo -F @idt-shit/db db:migrate",
    "db:local": "turbo -F @idt-shit/db db:local",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@idt-shit/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@idt-shit/config": "workspace:*",
    "@types/node": "^22.13.14",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.9"
}
